<div class="bbox round">
  <h1><%= t("ui.update_your_profile") %></h1>
</div>
<div class="bbox-pointer">&nbsp;</div>


<div class="item">

<a href="<%=USE_SSL ? 'https://secure.gravatar.com' : 'http://gravatar.com'%>" target="_blank"><%= t("ui.get_an_gravatar_here") %></a>

<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for @user, :url => user_path(@user), :method => 'put' do |f| -%>

<p><%= label_tag t('ui.name') %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag t('users.about') %><br/>
<%= f.text_field :about, :size => 74 %></p>

<p><%= label_tag t('ui.password') %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag t('ui.password_confirmation') %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= label_tag t('ui.time_zone') %><br/>
<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %></p>

<p><%= f.check_box :receive_email_notifications %> <%= label_tag t('ui.receive_email_notifications') %></p>

<p><%= submit_tag t('ui.update') %></p>

<%= link_to t("ui.disable"), disable_path, :confirm => t("ui.disable_confirm") %>

<% end -%>
</div>