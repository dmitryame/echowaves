<div class="ballon">
  <h1>New conversation</h1>
</div>
<div class="arrow">&nbsp;</div>

<div class="item">
<% form_for(@conversation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', conversations_path %>
</div>
