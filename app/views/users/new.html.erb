<div class="bbox round">
  <h1><%= t("users.sign_up_as_new_user") %></h1>
</div>
<div class="bbox-pointer">&nbsp;</div>

<div class="item">

<a rel="external" href="<%=USE_SSL ? 'https://secure.gravatar.com' : 'http://gravatar.com'%>" ><%= t("ui.get_an_gravatar_here") %></a>

<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><%= label_tag :user_login, t("ui.login_name") %><br/>
<%= f.text_field :login %></p>

<%if(!SHOW_ACTIVATION_LINK)%>
	<p>activation account link will be emailed to you, please enter a real email address</p>
<%end%>

<p><%= label_tag :user_email, t("ui.email") %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag :user_email_confirmation, t('ui.email_confirmation') %><br/>
<%= f.text_field :email_confirmation %></p>

<p><%= label_tag :user_name, t("ui.name") %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag :user_about, t('users.about') %><br/>
<%= f.text_field :about, :size => 74 %></p>

<p><%= label_tag :user_password, t("ui.password") %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag :user_password_confirmation, t('ui.password_confirmation') %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= label_tag :user_time_zone, t('ui.time_zone') %><br/>
<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %></p>

<p><%= submit_tag t('ui.signup') %></p>

<p class="out_of_screen"><%= label_tag :user_something, "important" %><%= f.text_field :something %></p>

<% end -%>
</div>