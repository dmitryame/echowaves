<h1>Editing conversation</h1>

<% form_for(@conversation) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @conversation %> |
<%= link_to 'Back', conversations_path %>
